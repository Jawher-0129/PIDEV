{% extends 'back.html.twig' %}

{% block title %}RendezVous index{% endblock %}

{% block body %}
    <h1 class="mb-4">RendezVous index</h1>
    <a href="{{path ('app_calendrier')}}" class="btn btn-primary">
        <i class="bi bi-calendar"></i> Calendrier
    </a>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="thead-custom"> {# Utilisation d'une classe personnalisée pour l'en-tête #}
                <tr>
                    <th>Id_rendezvous</th>
                    <th>Date</th>
                    <th>Lieu</th>
                    <th>Objective</th>
                    <th>Demande</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
      
                {% for rendez_vou in rendez_vouses %}
                    <tr>
                        <td>{{ rendez_vou.id_rendezvous }}</td>
                        <td>{{ rendez_vou.Date ? rendez_vou.Date|date('Y-m-d H:i:s') : '' }}</td>
                        <td>{{ rendez_vou.Lieu }}</td>
                        <td>{{ rendez_vou.Objective }}</td>
                        <td>{{ rendez_vou.demande }}</td>
                        
                        <td>
                            <a href="{{ path('app_rendez_vous_show', {'id_rendezvous': rendez_vou.id_rendezvous}) }}">
                                <i class="fas fa-info-circle"></i> <!-- Icône pour "Voir les détails" -->
                            </a>
                            <a href="{{ path('app_rendez_vous_edit', {'id_rendezvous': rendez_vou.id_rendezvous}) }}">
                                <i class="fas fa-edit"></i> <!-- Icône pour "Modifier" -->
                            </a>
                            <a href="{{ path('app_sms', {'id': rendez_vou.id_rendezvous}) }}">
                                <i class="fas fa-envelope"></i> <!-- Icône pour "Envoyer un message" -->
                            </a>
                            <a href="{{ path('delete', {'id': rendez_vou.id_rendezvous}) }}" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce rendez-vous ?')">
                                <i class="fas fa-trash"></i> <!-- Icône pour "Supprimer" -->
                            </a>
                            
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="text-center">Aucun enregistrement trouvé</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    {# <a href="{{ path('app_rendez_vous_new') }}" class="btn btn-primary">Créer nouveau</a> #}
{% endblock %}
