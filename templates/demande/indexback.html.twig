{% extends 'back.html.twig' %}

{% block title %}Demande index{% endblock %}

{% block body %}
 
 {% for flashType, flashMessages in app.flashes %}
    {% for flashMessage in flashMessages %}
        <div class="alert alert-{{ flashType }}" role="alert">
            <!-- Ajoutez une icône à côté du message -->
            {% if flashType == 'success' %}
                <i class="fas fa-check-circle"></i>
            {% elseif flashType == 'warning' %}
                <i class="fas fa-times-circle"></i>
            {% endif %}
            {{ flashMessage }}
        </div>
    {% endfor %}
{% endfor %}
    
    <div class="table-responsive">

    <br>

    <h1 class="mb-4">Les Demandes</h1>
   
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Id_demande</th>
                    <th>Date</th>
                     <th>titre</th>
                    <th>Description</th>
                    <th>Statut</th>
                    <th>Don</th>
                    <th>Directeur de campagne</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for demande in demandes %}
    <tr>
        <td>{{ demande.id_demande }}</td>
        <td>{{ demande.Date ? demande.Date|date('Y-m-d H:i:s') : '' }}</td>
         <td>{{ demande.titre }}</td>
        <td>{{ demande.Description }}</td>
         <td class="{% if demande.Statut == 'demande refuse' %}text-danger{% elseif demande.Statut == 'DEMENDE TRAITEE' %}text-success{% endif %}">
            {{ demande.Statut }}
        </td>
        <td>{{ demande.don.type }}</td>
        <td>{{ demande.directeurCampagne.Prenom }} {{ demande.directeurCampagne.Nom }}</td>
        <td>
            <a href="{{ path('app_rendez_vous_new', {'demande': demande.id_demande}) }}" class="btn btn-success btn-sm">
                <i class="fas fa-check"></i> Accepter
            </a>

            <a href="{{ path('refuseDemende', {'id_demande': demande.id_demande}) }}" class="btn btn-danger btn-sm">
                <i class="fas fa-times"></i> Refuser
            </a>
        </td>
    </tr>
{% else %}
    <tr>
        <td colspan="7" class="text-center">Aucun enregistrement trouvé</td>
    </tr>
{% endfor %}


            </tbody>
        </table>
    </div>

    {# <a href="{{ path('app_demande_new') }}" class="btn btn-outline-success">Créer nouveau</a> #}
{% endblock %}
