{% extends 'base.html.twig' %}

{% block title %}List of Materials{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <!-- Ajoutez Font Awesome ici -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
{% endblock %}

{% block body %}
    <!-- Messages Flash Start -->
    <div class="container mt-3">
        {% for flashType, flashMessages in app.flashes %}
            {% for flashMessage in flashMessages %}
                <div class="alert alert-{{ flashType }} alert-dismissible fade show" role="alert">
                    {% if flashType == 'success' %}
                        <i class="fas fa-check-circle"></i>
                    {% elseif flashType == 'error' %}
                        <i class="fas fa-times-circle"></i>
                    {% endif %}
                    {{ flashMessage }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}
    </div>
    <!-- Messages Flash End -->

     

    <!-- Liste des Matériels Start -->
    <div class="container-fluid py-5">
        <div class="container">
            <div class="text-center mx-auto mb-5" style="max-width: 500px;">
                <h5 class="d-inline-block text-primary text-uppercase border-bottom border-5">Bienvenue</h5>
                <h1 class="display-4">{{ categorie.LibelleCategorie }}</h1>
            </div>

            <form method="GET" action="{{ path('searchMaterielFront') }}">
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <div class="input-group mb-3">
                            <input type="text" class="form-control" placeholder="Search" aria-label="Search" name="query">
                            <button class="btn btn-primary" type="submit">Rechercher</button>
                        </div>
                    </div>
                </div>
            </form>

            <div class="row g-5">
                {% for materiel in categorie.materiels %}
                    <div class="col-xl-4 col-lg-6">
                        <div class="bg-light rounded overflow-hidden">
                            {% if materiel.image starts with 'C' %}
                            {% set fileName = materiel.image|split('\\')|last %}
                            <img class="img-fluid w-100" src="{{ asset('uploads/' ~ fileName) }}" alt="{{ materiel.Libelle }}">
                            {% else %}
                            <img class="img-fluid w-100" src="{{ asset('uploads/' ~ materiel.Image) }}" alt="{{ materiel.Libelle }}">
                            {% endif %}
                            <div class="p-4">
                                <h3 class="d-block mb-3">{{ materiel.Libelle }}</h3>
                                <p class="mb-3">{{ materiel.Description }}</p>
                                <ul class="list-unstyled">
                                    <li><strong>Category:</strong> {{ materiel.idCategorie.LibelleCategorie }}</li>
                                    <li><strong>Availability:</strong> {% if materiel.Disponibilite == 1 %}<span class="text-success">Available</span>{% else %}<span class="text-danger">Not Available</span>{% endif %}</li>
                                </ul>
                                <button class="btn btn-primary show-qrcode-btn" data-bs-toggle="modal" data-bs-target="#qrcodeModal{{ materiel.idMateriel }}">QR Code</button>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
    <!-- Liste des Matériels End -->

    <!-- Modal pour le QR Code -->
    {% for materiel in categorie.materiels %}
        <div class="modal fade" id="qrcodeModal{{ materiel.idMateriel }}" tabindex="-1" aria-labelledby="qrcodeModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="qrcodeModalLabel">QR Code for {{ materiel.Libelle }}</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <img src="{{ asset('uploads/' ~ materiel.idMateriel ~ '.png') }}" class="img-fluid" alt="QR Code">
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
    <!-- Modal pour le QR Code -->

{% endblock %}

{% block javascripts %}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var showQRButtons = document.querySelectorAll('.show-qrcode-btn');
            showQRButtons.forEach(function(button) {
                button.addEventListener('click', function() {
                    var targetModalId = this.getAttribute('data-bs-target');
                    var modal = new bootstrap.Modal(document.querySelector(targetModalId));
                    modal.show();
                });
            });
        });
    </script>
{% endblock %}