{% extends 'base.html.twig' %}

{% block title %}Liste des Cat√©gories{% endblock %}

{% block body %}
    <!-- Services Start -->
    <section class="services" id="services">
        <div class="container-fluid py-5">
            <div class="container">
                <div class="text-center mx-auto mb-5" style="max-width: 500px;">
                    <h1 class="display-4">Category</h1>
                </div>
                <div class="row g-5">
                    {% for categorie in categories %}
                        <div class="col-lg-4 col-md-6">
                            <div class="service-item bg-light rounded d-flex flex-column align-items-center justify-content-center text-center">
                                <div class="service-icon mb-4">
                                    <i class="fas fa-2x fa-hospital text-white"></i>
                                </div>
                                <h4 class="mb-3">{{ categorie.LibelleCategorie }}</h4>
                                <a class="btn btn-lg btn-primary rounded-pill" href="{{ path('materiels_par_categorie', {'id': categorie.getIdCategorie()}) }}">
                                    <i class="bi bi-arrow-right"></i>
                                </a>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </section>
    <!-- Services End -->
{% endblock %}