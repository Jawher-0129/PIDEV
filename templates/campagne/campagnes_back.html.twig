{# campagne/campagnes_back.html.twig #}

{% extends 'back.html.twig' %}

{% block title %}
    Back Office - All Campagnes
{% endblock %}

{% block body %}
    <div class="text-center"> <!-- Center-align the title -->
        <h1 class="mb-4">Liste des Campagnes</h1>
    </div>
     <!-- Ajouter le formulaire de recherche ici -->
    <div class="row justify-content-center mb-4">
        <div class="col-md-6">
            {{ form_start(searchForm, {'attr': {'class': 'form-inline justify-content-center'}}) }}
                <div class="input-group">
                    {{ form_widget(searchForm.searchTerm, {'attr': {'class': 'form-control', 'placeholder': 'Rechercher...'}}) }}
                    <div class="input-group-append">
                        <button class="btn btn-outline-secondary" type="submit">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
            {{ form_end(searchForm) }}
        </div>
    </div>
    <div id="multi_col_order_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap4 no-footer">
        <div class="row">
            <div class="col-sm-12">
                <table id="multi_col_order" class="table table-striped table-bordered display no-wrap dataTable no-footer" style="width: 100%;" role="grid" aria-describedby="multi_col_order_info">
                    <thead class="bg-info text-white">
                        <tr role="row">
                            <th scope="col" class="sorting_asc" tabindex="0" aria-controls="multi_col_order" rowspan="1" colspan="1" aria-sort="ascending" aria-label="ID: activate to sort column descending" style="width: 83px;">ID</th>
                            <th scope="col" class="sorting" tabindex="0" aria-controls="multi_col_order" rowspan="1" colspan="1" aria-label="Titre: activate to sort column ascending" style="width: 81px;">Titre</th>
                            <th scope="col" class="sorting" tabindex="0" aria-controls="multi_col_order" rowspan="1" colspan="1" aria-label="Date: activate to sort column ascending" style="width: 91px;">Date</th>
                            <th scope="col" class="sorting" tabindex="0" aria-controls="multi_col_order" rowspan="1" colspan="1" aria-label="Actions: activate to sort column ascending" style="width: 71px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% if campagnes is not empty %}
                            {% for campagne in campagnes %}
                                <tr>
                                    <th scope="row">{{ campagne.id }}</th>
                                    <td>{{ campagne.Titre }}</td>
                                    <td>{{ campagne.DateDebut|date('Y-m-d') }} to {{ campagne.DateFin|date('Y-m-d') }}</td>
                                    <td>
                                        <a href="{{ path('show_campagne_back', {'id': campagne.id}) }}" class="btn btn-info btn-sm">Details</a>
                                        <a href="{{ path('updatecampagne_back', {'id': campagne.id}) }}" class="btn btn-light btn-sm">Modifier</a>
                                       
                                      {# Bouton pour afficher le PDF des dons associés à cette campagne #}
<a href="{{ path('app_don_list', {'campagneId': campagne.id}) }}" class="btn btn-secondary btn-sm">
    <i class="fas fa-download"></i> Les Dons
</a>

                                    </td>
                                </tr>
                            {% endfor %}
                        {% else %}
                            <tr>
                                <td colspan="5">Pas de campagnes trouvées.</td>
                            </tr>
                        {% endif %}
                    </tbody>
                </table>
            </div>
        </div>

       <div class="row mt-3">
            <div class="col-sm-12">
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center">
                        {{ knp_pagination_render(campagnes) }}
                    </ul>
                </nav>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-sm-12">
                <a href="{{ path('add_campagne_back') }}" class="btn btn-success">Ajouter Campagne</a>
            </div>
        </div>
    </div>

{% endblock %}
