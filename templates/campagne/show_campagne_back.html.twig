{% extends 'back.html.twig' %}

{% block title %}
    {{ campagne.Titre }} Details - My Campaigns
{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>{{ campagne.Titre }} Details</h1>

        <dl class="row">
            <dt class="col-sm-3">ID:</dt>
            <dd class="col-sm-9">{{ campagne.id }}</dd>

            <dt class="col-sm-3">Titre:</dt>
            <dd class="col-sm-9">{{ campagne.Titre }}</dd>

            <dt class="col-sm-3">Description:</dt>
            <dd class="col-sm-9">{{ campagne.Description }}</dd>

            <dt class="col-sm-3">Date:</dt>
            <dd class="col-sm-9">{{ campagne.DateDebut|date('Y-m-d') }} to {{ campagne.DateFin|date('Y-m-d') }}</dd>

            <dt class="col-sm-3">Image:</dt>
            <dd class="col-sm-9">
                {% if campagne.Image %}
                    <img src="{{ asset('uploads/Images/' ~ campagne.Image) }}" alt="{{ campagne.Titre }} Image" class="img-fluid" style="max-width: 200px; max-height: 200px; object-fit: cover;">
                {% else %}
                    <span class="text-muted">No Image</span>
                {% endif %}
            </dd>
        </dl>

        <div class="mt-3">
            <a href="{{ path('all_campagnes_back') }}" class="btn btn-secondary">Retour</a>
            <a href="{{ path('updatecampagne_back', {'id': campagne.id}) }}" class="btn btn-light btn-sm">Modifier</a>
            <a href="{{ path('delete_campagne_back', {'id': campagne.id}) }}" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this campagne?')">Supprimer</a>
        </div>
    </div>
{% endblock %}
