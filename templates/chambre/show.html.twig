{% extends 'back.html.twig' %}

{% block title %}Chambre{% endblock %}

{% block body %}
    <h1>Chambre</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Numero</th>
                <td>{{ chambre.Numero }}</td>
            </tr>
            <tr>
                <th>Disponibilite</th>
                <td>{{ chambre.Disponibilite ? 'OUI' : 'NON' }}</td>
            </tr>
            <tr>
                <th>Nombre_litsTotal</th>
                <td>{{ chambre.NombreLitsTotal }}</td>
            </tr>
            <tr>
                <th>Nmbr_litsDisponible</th>
                <td>{{ chambre.NmbrLitsDisponible }}</td>
            </tr>
             <tr>
                <th>Personnel</th>
                <td>{{ chambre.Personnel }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_chambre_index') }}">Retourner</a>

    <a href="{{ path('app_chambre_edit', {'Numero': chambre.Numero}) }}">Modifier</a>

    {{ include('chambre/_delete_form.html.twig') }}
{% endblock %}