{% extends 'base.html.twig' %}

{% block title %}Nos Personnels{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <!-- Include Bootstrap CSS -->
    <link rel="stylesheet" href="path/to/bootstrap.min.css">

    <!-- Custom CSS for star icons -->
    <style>
        /* Define custom colors */
        :root {
            --gold-color: gold;
        }

        /* Define star icon */
        .star {
            font-size: 24px; /* Adjust size as needed */
            color: #ccc; /* Outline color */
        }

        /* Define filled star icon */
        .star-filled {
            color: var(--gold-color); /* Use gold color variable */
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container-fluid py-5">
        <div class="container">
            <div class="text-center mx-auto mb-5" style="max-width: 500px;">
                <h5 class="d-inline-block text-primary text-uppercase border-bottom border-5">Nos Personnels</h5>
                <h1 class="display-4">Professionnels de santé qualifiés</h1>
            </div>
            <div class="owl-carousel team-carousel position-relative">
                {% if personnels is not empty %}
                    {% for personnel in personnels %}
                        <div class="team-item">
                            <div class="row g-0 bg-light rounded overflow-hidden">
                                <div class="col-12 col-sm-5 h-100">
                                    {% if personnel.Image starts with 'C' %}
                                    {% set fileName = personnel.Image|split('\\')|last %}
                                        <img class="img-fluid h-100" src="{{ asset('uploads/' ~ fileName) }}" style="object-fit: cover;">
                                        {% else %}
                                        <img class="img-fluid h-100" src="{{ asset('uploads/Images/' ~ personnel.Image) }}" style="object-fit: cover;">
                                        {% endif %}
                                </div>
                                <div class="col-12 col-sm-7 h-100 d-flex flex-column">
                                    <div class="mt-auto p-4">
                                        <h3>{{ personnel.getNom() }} {{ personnel.getPrenomPersonnel() }}</h3>
                                        <h6 class="fw-normal fst-italic text-primary mb-4">Role: {{ personnel.getRole() }}</h6>
                                        {% if personnel.getExperience() is not null %}
                                            <p class="m-0">Experience: {{ personnel.getExperience() }}</p>
                                        {% endif %}
                                        
                                        <!-- Display the Rating with Bootstrap Stars -->
                                        <div class="rating">
                                            {% for i in 1..5 %}
                                                {% if i <= personnel.rating %}
                                                    <span class="star">&#9733;</span> <!-- Filled star -->
                                                {% else %}
                                                    <span class="star">&#9734;</span> <!-- Empty star -->
                                                {% endif %}
                                            {% endfor %}
                                        </div>
                                    </div>
                                    <div class="d-flex mt-auto border-top p-4">
                                        <a class="btn btn-lg btn-primary btn-lg-square rounded-circle me-3" href="#"><i class="fab fa-twitter"></i></a>
                                        <a class="btn btn-lg btn-primary btn-lg-square rounded-circle me-3" href="#"><i class="fab fa-facebook-f"></i></a>
                                        <a class="btn btn-lg btn-primary btn-lg-square rounded-circle" href="#"><i class="fab fa-linkedin-in"></i></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                {% else %}
                    <div class="col-md-12">
                        <p>No personnel found.</p>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
