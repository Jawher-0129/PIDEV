{% extends 'base.html.twig' %}

{% block title %}All Actualites{% endblock %}

{% block body %}
<div class="container-fluid py-5">
    <div class="container">
        <div class="text-center mx-auto mb-5" style="max-width: 500px;">
            <h5 class="d-inline-block text-primary text-uppercase border-bottom border-5">Actualit√©s</h5>
            <h1 class="display-4">Nos Actualites</h1>
        </div>
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="owl-carousel testimonial-carousel" id="actualitesCarousel">
                    {% for actualite in actualites %}
                        <div class="item"> <!-- 'item' class for Owl Carousel -->
                            <div class="testimonial-item text-center">
                                <div class="position-relative mb-5">
                                    <div class="service-icon mb-4">
                                        <i class="fa fa-2x fa-microscope text-primary"></i>
                                    </div>
                                    <div class="position-absolute top-100 start-50 translate-middle d-flex align-items-center justify-content-center bg-white rounded-circle" style="width: 60px; height: 60px;">
                                        <i class="fa fa-quote-left fa-2x text-primary"></i>
                                    </div>
                                </div>
                                <p class="fs-4 fw-normal">{{ actualite.description }}</p>
                                <hr class="w-25 mx-auto">
                                <h3>{{ actualite.titre }}</h3>
                                <h6 class="fw-normal text-primary mb-3">{{ actualite.typePubCible }}</h6>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function(){
      $("#actualitesCarousel").owlCarousel({
        loop: true,
        margin: 10,
        nav: true, // Show navigation arrows
        dots: false, // Hide navigation dots
        items: 1, // Ensure only one item is displayed at a time
        responsive: {
          0: {
            items: 1
          },
          600: {
            items: 1
          },
          1000: {
            items: 1
          }
        }
      });
    });
</script>
{% endblock %}