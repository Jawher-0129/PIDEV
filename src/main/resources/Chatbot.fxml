<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="466.0" prefWidth="546.0" spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ChatbotController">
    <children>
        <TextArea fx:id="chatArea" editable="false" prefHeight="300.0" prefWidth="400.0" promptText="Chat Messages" wrapText="true">
            <font>
                <Font size="14.0" />
            </font>
        </TextArea>
        <TextField fx:id="userInputField" promptText="Type your message here" />
        <Button fx:id="sendButton" mnemonicParsing="false" prefHeight="26.0" prefWidth="114.0" styleClass="delete-btn" stylesheets="@Style.css" text="Envoyer" />
    </children>
</VBox>
